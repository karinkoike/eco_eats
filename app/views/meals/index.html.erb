<h1 class="my-4 text-center">🌱 食事一覧 🌱</h1>

<div class="text-center my-4">
  <%= link_to '新しい食事を追加', new_meal_path, class: 'btn btn-primary btn-lg' %>
</div>

<div class="row">
  <% if @meals.present? %>
    <% @meals.each do |meal| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow">
          <% if meal.image.present? %>
            <%= image_tag meal.image, class: "card-img-top img-fluid", style: "height: 300px;" %>
          <% else %>
            <img class="card-img-top img-fluid" src="https://via.placeholder.com/150" alt="Placeholder" style="height: 300px;">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to meal.name, meal_path(meal) %></h5>
            <p class="card-text"><%= truncate(meal.description, length: 100) %></p>
            <% if meal.meal_time.present? %>
              <p class="card-text"><small class="text-muted"><%= meal.meal_time.strftime('%Y.%-m/%-d %H:%M') %></small></p>
            <% end %>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between">
            <%= link_to '詳細を見る', meal_path(meal), class: "btn btn-outline-primary btn-sm" %>
            <div>
              <%= link_to '編集', edit_meal_path(meal), class: "btn btn-outline-secondary btn-sm me-2" %>
              <%= link_to '削除', meal_path(meal), data: { turbo_method: :delete }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12 text-center">
      <p class="my-4">食事情報はありません。</p>
    </div>
  <% end %>
</div>
