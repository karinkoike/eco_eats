<h2>EcoEatsに登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(最小<%= @minimum_password_length %> 文字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード確認" %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %><br />
    <%= f.number_field :age, placeholder: "年齢" %>
  </div>

  <div class="field">
    <%= f.label :gender, "性別" %><br />
    <%= f.select :gender, ['男性', '女性', 'その他'], prompt: "性別を選択" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
