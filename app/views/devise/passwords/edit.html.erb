<h2>EcoEatsのパスワード変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br />
    <%= f.password_field :password, autofocus: true, placeholder: "新しいパスワード", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード確認" %><br />
    <%= f.password_field :password_confirmation, placeholder: "新しいパスワード確認", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワード変更" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
