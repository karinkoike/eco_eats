<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center">EcoEatsのパスワード変更</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group mb-4">
              <%= f.label :password, "新しいパスワード", class: 'form-label' %><br />
              <%= f.password_field :password, autofocus: true, placeholder: "新しいパスワード", autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "新しいパスワード確認", class: 'form-label' %><br />
              <%= f.password_field :password_confirmation, placeholder: "新しいパスワード確認", autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "パスワード変更", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
